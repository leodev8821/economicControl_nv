{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    // Importante para que funcione el 'main': './src/index.ts'
    "allowImportingTsExtensions": true, 
    // No queremos generar archivos, usamos el TS directo
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": false
  },
  "include": ["src"]
}