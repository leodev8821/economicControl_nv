{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,           // OBLIGATORIO para Project References y Turbo
    "outDir": "./dist",
    "rootDir": "src",            // Define dónde está tu código fuente
    
    "moduleResolution": "node16",
    "module": "node16",
    "allowImportingTsExtensions": false,  // Override base config since we emit JS files

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "noEmit": false,             // Para que el build genere archivos en /dist
    "declaration": true,         // Genera tipos para el build
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "types/express.d.ts" // Incluir definiciones personalizadas
  ],
  "references": [
    { "path": "../shared" }      // <--- Vincula el servidor con el paquete compartido
  ]
}