{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,           
    "outDir": "./dist",
    "rootDir": "src",            
    "module": "NodeNext",
    "allowImportingTsExtensions": false,  

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "noEmit": false,             
    "declaration": true,         
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    // Para que funcione el path mapping
    "baseUrl": ".",
    "paths": {
      "@economic-control/shared": ["../shared/src/index.ts"]
    }
  },
  "include": [
    "src/**/*",
    "types/express.d.ts" 
  ],
  "references": [
    { "path": "../shared" }      
  ]
}