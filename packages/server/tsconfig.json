{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "composite": true,           
    "outDir": "./dist",
    "rootDir": "src",            
    "module": "NodeNext",
    "allowImportingTsExtensions": false,  

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "noEmit": false,             
    "declaration": true,         
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": {
      "@economic-control/shared": ["../shared/src/index.ts"],
      "@config/*": ["./src/config/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@models/*": ["./src/models/*"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["./src/services/*"],
      "@shared/*": ["./src/shared/*"],
      "@utils/*": ["./src/utils/*"],
    }
  },
  "include": [
    "src/**/*",
    "types/express.d.ts" 
  ],
  "exclude": [
    "src/migrations"
  ],
  "references": [
    { "path": "../shared" }      
  ]
}