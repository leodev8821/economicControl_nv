{
  "compilerOptions": {
    /* Opciones de diseÃ±o de archivos */
    "rootDir": "./",
    "outDir": "./dist",
    "ignoreDeprecations": "6.0",
    
    /* Opciones del entorno */
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "moduleResolution": "node", // ðŸ‘ˆ Funciona tanto para tsc como tsx
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    /* Salidas */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    /* Opciones de comprobaciÃ³n de tipos */
    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Opciones adicionales */
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}