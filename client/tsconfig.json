{
  "files": [],
  "compilerOptions": {
    "target": "ES2023", // o más reciente
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "jsx": "react-jsx", // Esto es crucial para proyectos modernos (React 17+)
    "moduleResolution": "node", // Asegura la correcta resolución de módulos
    "esModuleInterop": true,   // Es importante para mezclar CommonJS y ES Modules
    "ignoreDeprecations": "6.0",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
