{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "skipLibCheck": true,

    /* Resolución de Módulos */
    "moduleResolution": "NodeNext", // Cambiado de 'bundler' para mejor compatibilidad con Node/Docker
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // CAMBIO CRÍTICO: Debe ser false para que Shared y Server generen archivos
    
    /* Linting & Strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}