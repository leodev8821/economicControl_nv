{
  "name": "economic-control-root",
  "version": "0.0.0",
  "private": true,
  "description": "Configuration root package for Economic Control monorepo",
  "scripts": {
    "install:all": "pnpm install",
    "db:setup": "pnpm --filter @economic-control/server run db:setup",
    "init": "pnpm install:all && pnpm db:setup && pnpm dev",
    "dev": "concurrently \"pnpm --filter @economic-control/server dev\" \"pnpm --filter @economic-control/client dev\"",
    "build": "pnpm -r run build",
    "clean": "rm -rf node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
